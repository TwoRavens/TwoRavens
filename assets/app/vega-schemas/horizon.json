{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Horizon graph",
  "data": {
    "url": "tworavensData"
  },
  "layer": [
    {
      "mark": {
        "type": "area",
        "clip": true,
        "orient": "vertical"
      },
      "encoding": {
        "x": {
          "field": "tworavensX",
          "type": "quantitative",
          "scale": {
            "zero": false,
            "nice": false
          }
        },
        "y": {
          "field": "tworavensY",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              "tworavensMeanY"
            ]
          }
        },
        "opacity": {
          "value": 0.6
        }
      }
    },
    {
      "transform": [
        {
          "calculate": "datum.tworavensY - tworavensMeanY",
          "as": "ny"
        }
      ],
      "mark": {
        "type": "area",
        "clip": true,
        "orient": "vertical"
      },
      "encoding": {
        "x": {
          "field": "tworavensX",
          "type": "quantitative"
        },
        "y": {
          "field": "ny",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              "tworavensMeanY"
            ]
          },
          "axis": {
            "title": "tworavensY"
          }
        },
        "opacity": {
          "value": 0.3
        }
      }
    }
  ],
  "config": {
    "area": {
      "interpolate": "monotone"
    }
  }
}
