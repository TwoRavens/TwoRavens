{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "A scatterplot with mean and standard deviation overlay.",
  "data": {"url": "tworavensData"},
  "layer": [{
    "mark": "point",
    "encoding": {
      "x": {"field": "tworavensX","type": "quantitative"},
      "y": {"field": "tworavensY","type": "quantitative"}
    }
  },{
    "transform": [
      {
        "aggregate": [
          {"op": "mean", "field": "tworavensY", "as": "meanY"},
          {"op": "stdev", "field": "tworavensY", "as": "devY"}
        ],
        "groupby": []
      },
      {
        "calculate": "datum.meanY-datum.devY",
        "as": "lower"
      },
      {
        "calculate": "datum.meanY+datum.devY",
        "as": "upper"
      }
    ],
    "layer": [{
      "mark": "rule",
      "encoding": {
        "y": {"field": "meanY","type": "quantitative", "axis": null}
      }
    },{
      "mark": "rect",
      "encoding": {
        "y": {"field": "lower","type": "quantitative",
          "axis": null},
        "y2": {"field": "upper","type": "quantitative"},
        "opacity": {"value": 0.2}
      }
    }]
  }]
}
